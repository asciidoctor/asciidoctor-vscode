{
    "name": "asciidoctor-vscode",
    "displayName": "AsciiDoc",
    "description": "Live preview (with AsciiDoctor) and syntax highlighting.",
    "version": "0.3.3",
    "publisher": "joaompinto",
    "author": "Jo√£o Pinto <lamego.pinto@gmail.com>",
    "license": "MIT",
    "readme": "README.md",
    "repository": {
        "type": "git",
        "url": "https://github.com/joaompinto/asciidoctor-vscode"
    },
    "galleryBanner": {
        "color": "#78d6f0",
        "theme": "light"
    },
    "bugs": "https://github.com/joaompinto/asciidoctor-vscode/issues",
    "homepage": "https://github.com/joaompinto/asciidoctor-vscode/blob/master/README.md",
    "icon": "images/icon.png",
    "main": "./out/src/extension",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Languages"
    ],
    "activationEvents": [
        "onCommand:adoc.preview",
        "onCommand:adoc.previewToSide"
    ],
    "contributes": {
        "languages": [
            {
                "id": "asciidoc",
                "aliases": [
                    "AsciiDoc",
                    "AsciiDoc(tor)"
                ],
                "extensions": [
                    ".adoc",
                    ".asciidoc"
                ]
            }
        ],
        "grammars": [
            {
                "language": "asciidoc",
                "scopeName": "text.asciidoc",
                "path": "./syntaxes/Asciidoctor.tmLanguage"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "AsciiDoc Option Configuration",
            "properties": {
                "AsciiDoc.html_generator": {
                    "type": "string",
                    "default": "asciidoctor -o-",
                    "description": "command to be used for the HTML generation"
                }
            }
        },
        "keybindings": [
            {
                "command": "adoc.preview",
                "key": "ctrl+shift+r",
                "when": "editorTextFocus"
            },
            {
                "command": "adoc.previewToSide",
                "key": "ctrl+k r",
                "when": "editorTextFocus"
            }
        ],
        "commands": [
            {
                "command": "adoc.preview",
                "title": "Toggle Preview",
                "category": "AsciiDoc"
            },
            {
                "command": "adoc.previewToSide",
                "title": "Open Preview to the Side",
                "category": "AsciiDoc"
            },
            {
                "command": "adoc.updateTimer",
                "title": "Start adoc updateTimer",
                "category": "AsciiDoc"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "command": "adoc.previewToSide",
                    "when": "resourceLangId == asciidoc"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "file-url": "^1.0.1",
        "vscode": "^1.0.0",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    },
    "dependencies": {
        "file-url": "^1.0.1",
        "tmp": "^0.0.29"
    }
}