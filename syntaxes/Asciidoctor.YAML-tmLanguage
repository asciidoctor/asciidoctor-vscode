  inline_callout:
    comment: |
      Callout label

      Examples:
        <1>
        <42>
    name: constant.other.callout.asciidoc
    match: (?<!\\)(<)\d+(>)
    captures:
      '1': {name: punctuation.definition.callout.begin.asciidoc}
      '2': {name: punctuation.definition.callout.end.asciidoc}


#-----------------------------------------------------------------------------#
#                             C H A R A C T E R S                             #
