  mark_double:
    comment: |
      Marked text (unconstrained variant).

      Examples:
        Lo##re##m ##ipsum dolor##.
        Lo[red]##re##m
    name: string.other.unquoted.double.asciidoc
    contentName: string.unquoted.unquotedinner.double.asciidoc
